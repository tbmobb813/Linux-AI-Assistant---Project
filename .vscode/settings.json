{
  // ----- Global editor behavior -----
  "editor.formatOnSave": true,
  "editor.defaultFormatter": null,
  // Only run ESLint fixes on explicit save (ESLint v3 recommended)
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // ----- Language-specific -----
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": null
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": null
  },
  // ----- Rust Analyzer -----
  "rust-analyzer.linkedProjects": [
    "linux-ai-assistant/src-tauri/Cargo.toml"
  ],
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.cargo.noDefaultFeatures": false,
  // ----- TypeScript -----
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  // ----- File associations / excludes -----
  "files.associations": {
    "*.rs": "rust"
  },
  "files.exclude": {
    "**/target": true,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/target": true,
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/target/**": true
  },
  // ----- CSS/Tailwind -----
  "css.lint.unknownAtRules": "ignore",
  "less.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "tailwindCSS.experimental.configFile": "linux-ai-assistant/tailwind.config.cjs",
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  }
}