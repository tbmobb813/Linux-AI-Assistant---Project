{
  "name": "linux-ai-assistant-repo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "linux-ai-assistant"
  ],
  "scripts": {
    "dev": "npm run -w linux-ai-assistant dev",
    "build": "npm run -w linux-ai-assistant build",
    "preview": "npm run -w linux-ai-assistant preview",
    "tauri": "npm run -w linux-ai-assistant tauri",
    "prepare": "( [ -x \"./node_modules/.bin/husky\" ] && ./node_modules/.bin/husky install ) || ( command -v husky >/dev/null 2>&1 && husky install ) || true",
    "tauri-dev": "bash ./dev/tauri-dev.sh"
  },
  "devDependencies": {
    "@tauri-apps/cli": "2.9.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
  },
  "husky": {
    "version": "8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "pnpm --filter linux-ai-assistant exec prettier --write"
    ],
    "*.rs": [
      "cargo fmt --"
    ]
  }
}