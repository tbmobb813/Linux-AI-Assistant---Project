{
  "name": "linux-ai-assistant-repo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "linux-ai-assistant"
  ],
  "scripts": {
    "dev": "npm run -w linux-ai-assistant dev",
    "build": "npm run -w linux-ai-assistant build",
    "preview": "npm run -w linux-ai-assistant preview",
    "tauri": "npm run -w linux-ai-assistant tauri",
    "prepare": "( [ -x \"./node_modules/.bin/husky\" ] && ./node_modules/.bin/husky install ) || ( command -v husky >/dev/null 2>&1 && husky install ) || true",
    "tauri-dev": "bash ./dev/tauri-dev.sh",
    "md:check": "markdownlint \"**/*.md\" -c .markdownlint.json --ignore-path .markdownlintignore -i node_modules -i linux-ai-assistant/node_modules"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tauri-apps/cli": "2.9.1",
    "@types/node": "^24.9.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8.4.39",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "markdownlint-cli": "^0.42.0"
  },
  "husky": {
    "version": "8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ],
    "linux-ai-assistant/src-tauri/**/*.rs": [
      "bash -c 'cd linux-ai-assistant/src-tauri && cargo fmt -- \"$@\"' --"
    ]
  }
}
