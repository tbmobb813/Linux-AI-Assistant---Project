{
  "name": "linux-ai-assistant",
  "version": "0.1.0",
  "description": "A native Linux desktop AI assistant",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "run-dev": "../dev/run-dev.sh",
    "prepare": "git rev-parse --is-inside-work-tree > /dev/null 2>&1 && husky install || true",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
  "test": "vitest --run --reporter dot",
    "test:e2e": "playwright test --config=playwright-e2e/playwright.config.ts --project=chromium",
    "test:coverage": "vitest --coverage --run"
  },
  "dependencies": {
    "@tauri-apps/api": "2.9.0",
    "@tauri-apps/plugin-global-shortcut": "2.3.0",
    "@tauri-apps/plugin-notification": "2.3.1",
    "lucide-react": "^0.263.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "rehype-highlight": "^7.0.0",
    "rehype-katex": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "zustand": "^4.5.2"
  },
  "private": true,
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "tailwindcss": "^3.4.4",
    "postcss": "^8.4.39",
    "autoprefixer": "^10.4.19",
    "vitest": "^1.3.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "jsdom": "^22.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@playwright/test": "^1.56.1",
    "husky": "^8.0.3"
  },
  "vitest": {
    "exclude": [
      "e2e/**"
    ]
  }
}